# Database Configuration
DATABASE_URL=postgresql://ezfeature_user:ezfeature_password@localhost:5432/ezfeature

# API Keys (Required for full functionality)
OPENAI_API_KEY=your_openai_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Feature Extraction Configuration
ENABLE_JAVASCRIPT=true
MAX_CONTENT_SIZE_MB=100
EMBEDDING_MODEL=text-embedding-3-small
DUPLICATE_THRESHOLD=0.95

# Server Configuration
RUST_LOG=info
SERVER_PORT=8080
WORKER_CONCURRENCY=4

# Browser Configuration (for website extraction)
CHROME_BIN=/usr/bin/chromium
CHROME_DRIVER=/usr/bin/chromedriver
HEADLESS_BROWSER=true

# Performance Tuning
DB_POOL_MAX_CONNECTIONS=10
DB_POOL_MIN_CONNECTIONS=1
REQUEST_TIMEOUT_SECONDS=30
VECTOR_INDEX_PROBES=10

# Content Filtering
MIN_QUALITY_SCORE=0.5
BLOCKED_DOMAINS=spam.com,malware.net
ALLOWED_LANGUAGES=en,es,fr
MAX_VIDEO_DURATION_SECONDS=3600
MIN_AUDIO_DURATION_SECONDS=1

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9091
HEALTH_CHECK_INTERVAL=30