---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
---

<style>
	.about-content {
		h2,
		div p {
			font-family: 'Times New Roman', Times, serif;
		}
	}

	.mission-statement {
		background: linear-gradient(
			135deg,
			rgba(245, 245, 245, 0.05) 0%,
			rgba(245, 245, 245, 0.02) 100%
		);
		border: 2px solid rgba(245, 245, 245, 0.1);
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
	}

	.mission-statement:hover {
		border-color: white;
		background: linear-gradient(
			135deg,
			rgba(245, 245, 245, 0.08) 0%,
			rgba(245, 245, 245, 0.04) 100%
		);
	}

	.mission-item {
		position: relative;
		padding-left: 1.5rem;
		transition: all 0.3s ease;

		p > a {
			color: rgb(177, 177, 177);
		}

		p > a:hover {
			color: white;
		}
	}

	.mission-item::before {
		content: '*';
		position: absolute;
		left: 0;
		top: 0;
		color: rgba(245, 245, 245, 0.6);
		font-weight: bold;
		transition: all 0.3s ease;
	}

	.mission-item:hover::before {
		color: #f5f5f5;
	}
</style>

<Layout
	title="About | ez dev"
	description="Meet the team behind ez dev - building the future one line at a time."
>
	<section
		class="w-[min(80ch,100vw)] min-h-screen mt-[8rem] flex items-start justify-center px-6 md:px-8"
	>
		<div class="w-full mx-auto flex flex-col gap-8 about-content">
			<Navbar currentPath="/about" />
			<h2
				class="text-4xl md:text-6xl lg:text-7xl font-light text-[#F5F5F5] mt-8 mb-6"
				style="line-height: 1.2; letter-spacing: -0.02em;"
			>
				who we are
			</h2>

			<div class="mission-statement p-8 md:p-12 space-y-6">
				<div class="mission-item">
					<p class="text-lg md:text-xl text-[#F5F5F5] leading-relaxed">
						We are a collective of passionate technologists who want to build
						without compromising on our values.
					</p>
				</div>
				<div class="mission-item">
					<p class="text-lg md:text-xl text-[#F5F5F5] leading-relaxed">
						We want to help others and share the things we build along the way.
					</p>
				</div>
				<div class="mission-item">
					<p class="text-lg md:text-xl text-[#F5F5F5] leading-relaxed">
						We do not chase short-term profits at the expense of long term
						prosperity.
					</p>
				</div>
				<div class="mission-item">
					<p class="text-lg md:text-xl text-[#F5F5F5] leading-relaxed">
						We will not contribute to enriching the fiefdoms of irresponsible
						executives.
					</p>
				</div>
				<div class="mission-item">
					<p
						class="text-lg md:text-xl text-[#F5F5F5] leading-relaxed font-medium"
					>
						We will never be evil.
					</p>
				</div>
			</div>

			<h2
				class="text-4xl md:text-6xl lg:text-7xl font-light text-[#F5F5F5] mt-8 mb-6"
				style="line-height: 1.2; letter-spacing: -0.02em;"
			>
				who you are
			</h2>

			<div class="mission-statement p-8 md:p-12 space-y-6">
				<div class="mission-item">
					<p class="text-lg md:text-xl text-[#F5F5F5] leading-relaxed">
						Someone who shares our aspirations and has something they want to
						build.
					</p>
				</div>
				<div class="mission-item">
					<p class="text-lg md:text-xl text-[#F5F5F5] leading-relaxed">
						Someone who wants to <a href="/join">join</a> or <a
							href="/newproject">work with</a
						> our collective.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Call to Action -->
	<div class="text-center mt-24 mb-24">
		<div class="max-w-md mx-auto space-y-8">
			<p
				class="text-xl text-[#F5F5F5] opacity-80 leading-relaxed"
				style="font-family: Times;"
			>
				Want to join our team?
			</p>
			<a
				href="#careers"
				class="inline-block border border-[#F5F5F5] text-[#F5F5F5] px-8 py-4 text-lg transition-all duration-300 hover:bg-[#F5F5F5] hover:text-black hover:scale-105 transform"
			>
				View open positions
			</a>
		</div>
	</div>
	<Footer slot="footer" />
</Layout>

<script></script>
