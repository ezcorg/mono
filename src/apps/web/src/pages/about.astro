---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import Footer from '../components/Footer.astro';

const teamMembers = [
	{
		name: 'Alex Johnson',
		role: 'Lead Developer',
		bio: 'Passionate about creating elegant solutions to complex problems. Specializes in full-stack development and system architecture.',
		profileImage:
			'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop&crop=face',
		githubUrl: 'https://github.com/alexjohnson',
		email: 'alex@ezdev.com',
	},
];
---

<Layout
	title="About | ez dev"
	description="Meet the team behind ez dev - building the future one line at a time."
>
	<section
		class="min-w-[min(80ch,100vw)] mw-[min(60rem,100vw)] min-h-screen py-16 px-6 md:px-8"
	>
		<div class="max-w-7xl mx-auto">
			<!-- Header Section -->
			<div class="flex flex-col items-center text-center mb-16">
				<Logo size={60} />

				<h1
					class="text-4xl md:text-6xl lg:text-7xl font-light text-[#F5F5F5] mt-8 mb-6 opacity-0 translate-y-4 transition-all duration-700 ease-out animate-fade-in"
					style="line-height: 1.2; letter-spacing: -0.02em;"
				>
					meet the{' '}
					<span class="font-bold">team</span>
				</h1>

				<p
					class="text-xl md:text-2xl text-[#F5F5F5] opacity-80 max-w-2xl opacity-0 translate-y-4 transition-all duration-700 ease-out"
					style="animation-delay: 200ms; animation-fill-mode: forwards;"
				>
					The people behind the code, building the future one line at a time.
				</p>
			</div>

			<!-- Team Grid -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					teamMembers.map((member, index) => (
						<div
							class="opacity-0 translate-y-8 animate-fade-in border border-[#333333] p-6 transition-all duration-300 hover:border-[#F5F5F5]"
							style={`animation-delay: ${index * 200}ms; animation-fill-mode: forwards;`}
						>
							<div class="aspect-square bg-[#111111] overflow-hidden mb-4">
								<img
									src={member.profileImage}
									alt={member.name}
									class="w-full h-full object-cover"
								/>
							</div>
							<h3 class="text-xl font-bold text-[#F5F5F5] mb-2">
								{member.name}
							</h3>
							<p class="text-[#F5F5F5] opacity-70 mb-3">{member.role}</p>
							<p class="text-[#F5F5F5] opacity-60 text-sm mb-4">{member.bio}</p>
							<div class="flex gap-4">
								<a
									href={member.githubUrl}
									class="text-[#F5F5F5] opacity-60 hover:opacity-100 transition-opacity duration-300"
									target="_blank"
									rel="noopener noreferrer"
								>
									GitHub
								</a>
								<a
									href={`mailto:${member.email}`}
									class="text-[#F5F5F5] opacity-60 hover:opacity-100 transition-opacity duration-300"
								>
									Email
								</a>
							</div>
						</div>
					))
				}
			</div>

			<!-- Call to Action -->
			<div class="text-center mt-16">
				<p class="text-lg text-[#F5F5F5] opacity-70 mb-8">
					Want to join our team?
				</p>
				<a
					href="#careers"
					class="inline-block border border-[#F5F5F5] text-[#F5F5F5] px-8 py-4 text-lg transition-all duration-300 hover:bg-[#F5F5F5] hover:text-black"
				>
					View open positions
				</a>
			</div>
		</div>
	</section>

	<Footer slot="footer" />
</Layout>

<script></script>
