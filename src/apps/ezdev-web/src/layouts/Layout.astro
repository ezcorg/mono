---
import '../styles/global.css';

export interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = 'ez dev is a software development company focused on creating elegant, minimalist solutions to complex problems.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div
			class="min-h-screen w-full items-center bg-black text-[#F5F5F5] flex flex-col"
		>
			<main class="flex-grow page-content">
				<slot />
			</main>
			<slot name="footer" />
		</div>
	</body>
</html>
